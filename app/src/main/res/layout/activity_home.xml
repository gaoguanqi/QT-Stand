<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    tools:context=".view.activity.HomeActivity">

    <Button
        android:id="@+id/btn_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/selector_common"
        android:text="Home" />



    <com.maple.qt.widget.indicator.MapleIndicator
        android:id="@+id/mapleIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:indicatorType="split"
        android:layout_marginTop="40dp"
        app:normalPointColor="@color/white"
        app:normalPointRadius="2.5dp"
        app:pointInterval="15dp"
        app:selectedPointRadius="4.5dp" />

    <com.maple.qt.widget.view.LoadingButton
        android:id="@+id/lbtn_login"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_cancle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/selector_common"
        android:text="停止" />
</LinearLayout>